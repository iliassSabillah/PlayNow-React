<!-- Form -->
<div class="row valign-wrapper">
<form class="col s8" name = "sign-up" action="/sign-up" method="post">

<p id = "formHeading"> Sign up for PlayNow  </p>

<br/>
<div class="row">
<div class="input-field col s6">
   <input id="inputFirstName" type="text" class="validate" name="inputFirstName">
  <label for="inputFirstName">First Name</label>
</div>
 </div>

 <div class="row">
<div class="input-field col s6">
  <input id="inputLastName" type="text" class="validate" name="inputLastName">
  <label for="inputLastName">Last Name</label>
</div>
</div>

  <div class="row">
<div class="input-field col s6">
  <input id="inputUsername" type="text" class="validate" name="inputUsername">
  <label for="inputUsername">Username</label>
</div>
</div>

  <div class="row">
<div class="input-field col s6">
  <input id="inputEmail" type="email" class="validate" name="inputEmail">
  <label for="inputEmail">Email</label>
</div>
</div>

<div class="row">
<div class="input-field col s6">
  <input id="inputPassword" type="password" class="validate" name="inputPassword">
  <label for="inputPassword">Password</label>
</div>
</div>

<div class="row">
<div class="input-field col s6">
  <input id="inputZipcode" type="number" class="validate" name="inputZipcode">
  <label for="inputZipcode">Zipcode</label>
</div>
</div>

<br/>
<button class="btn #8bc34a light-green white-text text-white" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
</form>
</div>

