<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>PlayNow</title>

<link rel="stylesheet" href="/css/custom.css" type="text/css" />

<!--Import Google Icon Font-->
<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>

<!--Let browser know website is optimized for mobile-->
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

 <!-- Fonts -->
<link href="https://fonts.googleapis.com/css?family=Anonymous+Pro" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Chewy" rel="stylesheet">
</head>

<body>
<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="js/materialize.min.js"></script>

<!-- Navigation bar -->
<header>
<nav>
    <div class="nav-wrapper yellow darken-2">
    <a href="/" class="brand-logo white-text text-white" style="margin-left: 20px;">PlayNow</a>
        <ul id="slide-out" class="side-nav">
            {{#if cur_user}}
            <li>
                <div class="userView">
                    <div class="background">
                        <img src="">
                    </div>
                    <a href="#!user"><i class="material-icons">cloud</i><img class="circle" src=""></a>
                    <a href="#"><span class="black-text name">{{cur_user.username}}</span></a>
                    <a href="#"><span class="black-text email"></span>{{cur_user.email}}</a>
                </div>
            </li>
                <li><a href="/sports">Find team</a></li>
                <li><a href="/companies">Company</a></li>
                <li><a href="#" id="logout" class="black-text text-white">Logout</a></li>
            <li><div class="divider"></div></li>

            {{else}}
            <li><a href="/sign-up" waves-effect">Sign Up</a></li>
            <li><a href="/login" class="waves-effect" href="/login">Log In</a></li>
            {{/if}}
        </ul>
        <a href="/" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/sports" class="white-text text-white">Find team</a></li>
          {{#if cur_user}}
            <li><a href="/companies">Company</a></li>
            <li><a href="#">{{cur_user.username}}</a></li>
            <li><a href="#" id="logout" class="white-text text-white">Logout</a></li>
          {{else}}
            <li><a href="/sign-up" class="white-text text-white">Sign up</a></li>
            <li><a href="/login" class="white-text text-white">Log In</a></li>
          {{/if}}
        </ul>
    </div>
</nav>
</header>
<br/>
<main>
  {{{body}}}
</main>
<!-- Footer -->
 <footer class="page-footer grey darken-2" id="targetFooter">
          <div class="container">
            <div class="row">
              <div class="col l6 s12">
                <h5 class="amber-text text-darken-1">Footer Content</h5>
                <p class="amber-text text-darken-1">You can use rows and columns here to organize your footer content.</p>
              </div>
              <div class="col l4 offset-l2 s12">
                <h5 class="amber-text text-darken-1">Links</h5>
                <ul>
                  <li><a class="amber-text text-darken-1" href="#!">About us</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            Â© 2016 Copyright Text
            <a class="amber-text text-darken-1 right" href="#!">More Links</a>
            </div>
          </div>
        </footer>

  {{#if cur_user}}
  <script>
    ;(function() {
      $('#logout').click(function() {
        $.post("/logout", function() {
          window.location.href = '/';
        });
      });
    })();
  </script>
  {{/if}}

</body>

</html>
