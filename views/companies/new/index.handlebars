<header class="intro-header" style="background-image: url('')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Create A New Company</h1>
                    <hr class="small">
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form name="create-post" action="/companies" method="post">
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>CompanyName</label>
                        <input type="text" class="form-control" placeholder="companyName" name="companyName" required data-validation-required-message="Please enter a company name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Company Website</label>
                        <input type="text" class="form-control" placeholder="company website" name="companyWebsite" required data-validation-required-message="Please enter a body.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Company Phone</label>
                        <input type="text" class="form-control" placeholder="company phone" name="companyPhone" required data-validation-required-message="Please enter company Phone.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="address" name="address" required data-validation-required-message="Please enter a address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>State</label>
                        <input type="text" class="form-control" placeholder="state" name="state" required data-validation-required-message="Please enter a state.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>City</label>
                        <input type="text" class="form-control" placeholder="City" name="city" required data-validation-required-message="Please enter a City.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Zipcode</label>
                        <input type="text" class="form-control" placeholder="zipcode" name="zipcode" required data-validation-required-message="Please enter a zipcode.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-default">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>