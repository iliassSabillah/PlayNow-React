<script>
    var selectedChip;
    $('.chip').each(function(index,item){
      if( $(item).html().trim() == '{{sport}}'){
        selectedChip == '{{sport}}';
        $(this).toggleClass('clicked');
      }
    });
    console.log(selectedChip);

    // change color of selected chips to yellow
    $(".chip").click(function() {
        $(".chip").removeClass('clicked');
        $(this).toggleClass('clicked');

        var selectedSport = $(this).text();

        $.post('http://localhost:3000/sports', {
            sport: selectedSport
        });
    });
</script>
